      <option>charity</option>
      <option>cooking</option>
      <option>relaxation</option>
      <option>music</option>
      <option>busywork</option>
    </select>
  </div>

  <div class="form-group">
      
	  <div class="mb-3">
	    <label for="customRange3" class="form-label">Distance de détection [5-30] avec pas de 5 : <output id="showValRange">17</output> </label>
