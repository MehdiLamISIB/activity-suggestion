<form action="/activities" method="post">

  <!--Choix des categories -->
  <div class="form-group">
    <label for="exampleFormControlSelect1">Type d'activités</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>Education</option>
      <option>recreational</option>
      <option>social</option>
      <option>diy</option>
      <option>charity</option>
      <option>cooking</option>
      <option>relaxation</option>
      <option>music</option>
      <option>busywork</option>
    </select>
  </div>


  <!--Choix du prix -->
  <div class="form-group">
    <label for="peopleNumber">Nombre de personnes minimum</label>
    <input type="peopleNum" class="form-control" id="peopleNum" placeholder="2">
  </div>



  <div class="form-group">
	  <div class="mb-3">
	    <label for="customRange3" class="form-label">Prix: <output id="showValRange">50</output>€  </label>
	    <input type="range" class="form-range " min="0" max="100" step="1" id="price" name="price" oninput="showValRange.value=price.value">
	  </div>

</div>

  <button type="submit" class="btn btn-primary">Obtenir</button>

</form>