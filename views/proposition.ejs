<%- include('partials/header', { title: 'Proposition' }) %>
    <%- include('partials/navbar') %> 
    <div class="container mt-3">
    <div class="mx-auto" style="width:900px">
        <div class="container">
            <h1 class="display-1 pb-4" >Activity</h1>
        </div>

        <table class="table table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Field</th>
                <th scope="col">Description</th>
              </tr>
            </thead>
            <tbody>

              <tr>
                <td>Activity</td>
                <td><%= data.activity %></td>
              </tr>
              <tr>
                <td>Type</td>
                <td><%= data.type %></td>
              </tr>
              <tr>
                <td>Participants</td>
                <td><%= data.participants %></td>
              </tr>
              <tr>
                <td>Price</td>
                <!-- <td><= data.price %></td> -->
                <% if(data.price==0){ %>
                    <td>Free activity</td>
                <% }else{%>
                    <td><%= data.price*100 %>€</td>
                <% } %>


              </tr>
              <tr>
                <td>Link</td>
                <% if(!data.link){ %>
                    <td>no link</td>
                <% }else{%>
                    <td><%= data.link %></td>
                <% } %>
              </tr>

              <!-- La clée sera masqué après -->
              <tr>
                <td>Key</td>
                <td><%= data.key %></td>
              </tr>
              
              <tr>
                <td>Accessibility</td>
                <td><%= data.accessibility*100 %> %</td>
              </tr>

            </tbody>
        </table>
          
        <input class="btn btn-primary btn-lg" type="submit" value="Submit">
        <input class="btn btn-primary btn-lg" type="submit" value="Submit">

    </div>
    </div>


<%- include('partials/footer') %>